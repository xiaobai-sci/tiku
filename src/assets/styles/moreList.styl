moreList()
  display: inline-block
  position: absolute
  padding: 0
  right: .2rem
  top: 120%
  background-color: #fff
  --animate-duration: 0.3s
  transform-origin: right top
  cursor: auto

moreListChild()
  padding: .15rem .1rem
  background-color: #fff
  border: #eee 1px solid
  border-radius: .1rem
  cursor: auto

moreListGrandChild()
  position: relative
  display: block
  margin: .1rem 0
  padding: .05rem
  word-break: keep-all
  overflow: hidden